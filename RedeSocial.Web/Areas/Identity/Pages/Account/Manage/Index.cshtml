@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row ">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="mb-0">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
            </div>
            <div class="mb-0">
                <label asp-for="Input.FirstName" class="form-label"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="mb-0">
                <label asp-for="Input.LastName" class="form-label"></label>
                <input asp-for="Input.LastName" class="form-control" />
            </div>

            <div class="mb-1">
                <label asp-for="Input.BirthOfDay" class="form-label"></label>
                <input asp-for="Input.BirthOfDay" class="form-control" />
            </div>
            <div class="form-floating mb-0">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Input.ProfileUrlImage" class="form-label"></label>
                <input asp-for="Input.ProfileUrlImage" class="form-control" type="file" />
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Salvar</button>
        </form>
    </div>

    <div class="card text-center col-md-6">
        <div class="card-body">
            <img src="~/Uploads/@Model.Input.ProfileUrlImage" class="rounded-circle avatar-lg img-thumbnail" alt="profile-image" />
            <h4 class="mb-0 mt-2"></h4>

            <div class="text-start mt-3">
                <p class="text-muted mb-2 font-13">
                    <strong>Nome Completo :</strong> <span class="ms-2">
                        @Model.Input.FirstName @Model.Input.LastName
                    </span>
                </p>

                <p class="text-muted mb-2 font-13">
                    <strong>Contato :</strong><span class="ms-2">@Model.Input.PhoneNumber </span>
                </p>

                <p class="text-muted mb-2 font-13"><strong>Email :</strong> <span class="ms-2 ">@Model.Username</span></p>

                <p class="text-muted mb-1 font-13"><strong>Data da Aniversário :</strong> <span class="ms-2">@Model.Input.BirthOfDay</span></p>
            </div>

        </div>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
